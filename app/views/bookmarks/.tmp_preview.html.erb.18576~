<h1>Bookmarks</h1>
<table>
  <% i = 0 %>
  <tr>
  	<% @bookmarks.each do |bookmark| %>
      <td>
    	<%= link_to bookmark.title, bookmark.url %> <br />
		<% s = 0 %>
		<% bookmark.tags.each do |t| %>
			<span><%= t.tag %></span>
			<% if s == 2 %>
				<br />
				<% s = 0 %>
			<% end %>
			<% s = s + 1 %>
		<% end%>
	  </td>
		<% if i == 5 %>
			</tr>
			<tr>
			<% i = 0 %>
		<% end %>
		<% i = i + 1 %>
	<% end %>
	</tr>
</table>
